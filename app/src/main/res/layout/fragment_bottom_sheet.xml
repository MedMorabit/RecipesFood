<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bottomSheetId"
    android:layout_height="match_parent"
    tools:context=".fragments.BottomSheetFragment">
    <ImageView
        android:src="@color/black"
        android:id="@+id/image_bottomSheet"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp">

    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<LinearLayout
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_height="wrap_content">
    <TextView
        android:drawableStart="@drawable/ic_area"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:id="@+id/tv_area_bottomSheet"
        android:layout_height="wrap_content"
        android:text="Morocco">

    </TextView>
    <TextView
        android:drawableStart="@drawable/ic_category"
        android:layout_weight="1"
        android:id="@+id/tv_category_bottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beef">

    </TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/tv_mealName_bottomSheet"
            android:textSize="@dimen/_14sdp"
            android:layout_height="wrap_content"
            android:text="Meal Name">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/description_bottom_sheet"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Read More">

        </TextView>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>